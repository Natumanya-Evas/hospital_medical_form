<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ADMIN TABLE -->
    <changeSet id="1" author="evas">
        <createTable tableName="admin">
            <column name="admin_id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="admin_name" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="admin_role" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="admin_username" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="admin_password" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
