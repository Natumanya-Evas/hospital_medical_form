<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
      http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2-create-biometrics-table" author="evas">
        <createTable tableName="biometrics">
            <column name="biometric_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="mass" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="height" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="waist_circumference" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="bmi" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="patient_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="biometrics"
            baseColumnNames="patient_id"
            referencedTableName="patient"
            referencedColumnNames="patient_id"
            constraintName="fk_biometrics_patient"
            onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
